<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Sopranos Characters library</h1>
            <p>Know everything about Sopranos characters</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/sopranos/new">Add new character</a>
            </p>
        </div>
    </header>
    
    
   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% sopranos.forEach(function(soprano){ %>
            <div class="col-lg-3 col-sm-6">
                <div class="thumbnail">
                    
                    <img src="<%= soprano.image %>">
                    <div class="caption">
                        <h4><%= soprano.name %></h4>
                    </div>
                    <p>
                        <a href="/sopranos/<%= soprano._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
              
          
        <% }); %>
    </div>   
</div>
    

<% include ../partials/footer %>